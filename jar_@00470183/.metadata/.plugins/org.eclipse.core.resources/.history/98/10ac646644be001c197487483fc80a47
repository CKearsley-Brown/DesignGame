package aee926.sciencegame;

import java.util.ArrayList;

import javafx.scene.Group;
import javafx.scene.Node;
import javafx.scene.shape.Rectangle;

abstract class Graphic {
	public abstract Node draw();
}

class Wall extends Graphic {
	private double x, y, width, height, arcWidth, arcHeight;
	
	public Wall(double x, double y, double width, double height)
	{
		this.x=x;
		this.y=y;
		this.width=width;
		this.height=height;
		arcWidth=0;
		arcHeight=0;
	}
	
	public Node draw() {
		Rectangle r = new Rectangle();
		r.setX(x);
		r.setY(y);
		r.setWidth(width);
		r.setHeight(height);
		r.setArcWidth(arcWidth);
		r.setArcHeight(arcHeight);
		return r;
	}
	
}

class Area extends Graphic {
	public ArrayList<Graphic> area = new ArrayList<Graphic>();
	Group g = new Group();
	
	public Area()
	{
		
	}
	
	public Group getGroup()
	{
		return g;
	}
	
	public void add(Graphic wall)
	{
		area.add(wall);
	}
	
	public Node draw() {
		for (Graphic d:area)
		{
			Node n = d.draw();
			g.getChildren().add(n);
		}
		return g;
	}
}

public class Map {
	Area area;
	
	public Map() {
		area = new Area();
		Wall w1 = new Wall(0,0,800,20);
		Wall w2 = new Wall(760,0,20,800);
		Wall w3 = new Wall(0,0,800,20);
		
		area.add(w1);
	}
	
	Node drawWalls()
	{	
		Group group = new Group();
		group.getChildren().add(area.draw());
		return group;
	}
}
