package aee926.sciencegame;

import java.util.ArrayList;

import javafx.scene.canvas.GraphicsContext;

abstract class Graphic {
	public abstract void display(GraphicsContext gc);
}

class Leaf extends Graphic {
	public Leaf(String name)
	{
		this.name=name;
	}
	
	public void display() {
		
	}
	
}

class Group extends Graphic {
	public ArrayList<Graphic> leaves = new ArrayList<Graphic>();
	
	public Group(String name)
	{
		this.name=name;
	}
	
	public void add(Graphic leaf)
	{
		leaves.add(leaf);
	}
	
	public void display()
	{
		for(Graphic g:leaves)
			g.display();
	}
}

public class Map {
	GraphicsContext gc;
	Group root;
	
	public Map(GraphicsContext gc) {
		root = new Group("map");
		
		Group polygons = new Group("polygons");
		Leaf triangle = new Leaf("triangle");
		Group other = new Group("other");
		Leaf circle = new Leaf("circle");
		
		root.add(polygons);
		root.add(other);
		polygons.add(triangle);
		other.add(circle);
		
		renderScene();
	}
	
	void renderScene(){
		root.display();
	}
}
