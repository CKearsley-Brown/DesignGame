package aee926.sciencegame;

import java.util.ArrayList;

import javafx.scene.Group;
import javafx.scene.Node;
import javafx.scene.shape.Rectangle;

abstract class Graphic {
	public abstract Node draw();
}

class Wall extends Graphic {
	private double x, y, width, height, arcWidth, arcHeight;
	
	public Wall()
	{
		x=50;
		y=50;
		width=200;
		height=100;
		arcWidth=20;
		arcHeight=20;
	}
	
	public Node draw() {
		Rectangle r = new Rectangle();
		r.setX(x);
		r.setY(y);
		r.setWidth(width);
		r.setHeight(height);
		r.setArcWidth(arcWidth);
		r.setArcHeight(arcHeight);
		return r;
	}
	
}

class Area extends Graphic {
	public ArrayList<Graphic> area = new ArrayList<Graphic>();
	Group g = new Group();
	
	public Area()
	{
		
	}
	
	public Group getGroup()
	{
		return g;
	}
	
	public void add(Graphic wall)
	{
		area.add(wall);
	}
	
	public Node draw() {
		for (Graphic d:area)
		{
			Node n = d.draw();
			g.getChildren().add(n);
		}
		return g;
	}
}

public class Map {
	Area area;
	Wall wall;
	
	public Map() {
		area = new Area();
		wall = new Wall();
	}
	
	Node drawWalls()
	{	
		Group group = new Group();
		group.getChildren().add(area.draw());
		return group;
	}
}
