package aee926.sciencegame;

import java.util.ArrayList;

import javafx.scene.Node;
import javafx.scene.shape.Rectangle;

abstract class Graphic {
	public double x, y, width, height, arcWidth, arcHeight;
	public abstract void draw();
}

class Wall extends Graphic {
	private double x, y, width, height, arcWidth, arcHeight;
	
	public Wall()
	{
		x=0;
		y=0;
		width=200;
		height=100;
		arcWidth=20;
		arcHeight=20;
	}
	
	public Node draw() {
		Rectangle r = new Rectangle();
		r.setX(0);
		r.setY(0);
		r.setWidth(200);
		r.setHeight(100);
		r.setArcHeight(20);
		r.setArcHeight(20);
		return r;
	}
	
}

class Area extends Graphic {
	public ArrayList<Graphic> area = new ArrayList<Graphic>();
	
	public Area()
	{
		
	}
	
	public void add(Graphic wall)
	{
		area.add(wall);
	}
	
	public Node draw() {
		for(Graphic g : area)
			g.draw();
	}
}

public class Map {
	Area root;
	Wall wall;
	
	public Map() {
		
		root.add(wall);
	}
	
	Node drawWalls()
	{
		root.draw();
	}
}
