package aee926.sciencegame;

import java.util.ArrayList;

import javafx.scene.Group;
import javafx.scene.Node;
import javafx.scene.shape.Rectangle;
import javafx.scene.shape.Shape;

abstract class Graphic {
	public abstract Shape draw();
}

class Wall extends Graphic {
	private double x, y, width, height, arcWidth, arcHeight;
	
	public Wall()
	{
		x=50;
		y=50;
		width=200;
		height=100;
		arcWidth=20;
		arcHeight=20;
	}
	
	public Shape draw() {
		Rectangle r = new Rectangle();
		r.setX(x);
		r.setY(y);
		r.setWidth(200);
		r.setHeight(100);
		r.setArcWidth(arcWidth);
		r.setArcHeight(arcHeight);
		g.getChildren().add(r);
		return r;
	}
	
}

class Area extends Graphic {
	public ArrayList<Graphic> area = new ArrayList<Graphic>();
	Group g = new Group();
	
	public Area()
	{
		
	}
	
	public Group getGroup()
	{
		return g;
	}
	
	public void add(Graphic wall)
	{
		area.add(wall);
	}
	
	public Group draw() {
		for (Graphic d:area)
		{
			d.draw();
		}
	}
}

public class Map {
	Area area;
	Wall wall;
	
	public Map() {
		
	}
	
	Node drawWalls()
	{	
		Group g = new Group();
		
		area = new Area();
		wall = new Wall();
		
		area.add(wall);
		
		area.draw();
		g = area.getGroup();
		
		return g;
	}
}
