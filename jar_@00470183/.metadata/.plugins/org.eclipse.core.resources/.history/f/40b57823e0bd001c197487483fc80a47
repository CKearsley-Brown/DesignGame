package aee926.sciencegame;

import java.util.ArrayList;

import javafx.scene.Node;
import javafx.scene.shape.Rectangle;

abstract class Graphic {
	public abstract void draw();
}

class Leaf extends Graphic {
	public Leaf()
	{
		Rectangle r = new Rectangle();
		r.setX(0);
		r.setY(0);
		r.setWidth(200);
		r.setHeight(100);
		r.setArcHeight(20);
		r.setArcHeight(20);
	}
	
}

class Walls extends Graphic {
	public ArrayList<Graphic> walls = new ArrayList<Graphic>();
	
	public Walls()
	{
		
	}
	
	public void add(Graphic wall)
	{
		walls.add(wall);
	}
	
}

public class Map {
	Walls root;
	
	public Map() {
		
	}
	
	public Node draw()
	{
		Rectangle r = new Rectangle();
		r.setX(0);
		r.setY(0);
		r.setWidth(200);
		r.setHeight(100);
		r.setArcHeight(20);
		r.setArcHeight(20);
		return r;
	}
	
}
